<UserControl x:Class="MyWpfBrowser.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyWpfBrowser"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="800">
    <Grid Margin="0,29,0,0">
        <TextBlock HorizontalAlignment="Left" Margin="30,80,0,0" TextWrapping="Wrap" Text="You can open the WPF window directly in the browser tab and display it side by side with the web page. This is a bit similar to Silverlight, but in CSharp Browser, this is the real WPF interface and contains all the features of WPF." VerticalAlignment="Top" Height="134" Width="235"/>
        <Label Content="How does WPF work in CSharp Browser?" HorizontalAlignment="Left" Margin="30,30,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Ellipse HorizontalAlignment="Left" Height="44" Margin="30,219,0,0" Stroke="Black" VerticalAlignment="Top" Width="140" RenderTransformOrigin="0.5,0.5">
            <Ellipse.Fill>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="White" Offset="1"/>
                    <GradientStop Color="Lime"/>
                </LinearGradientBrush>
            </Ellipse.Fill>
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-30.915"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Ellipse.RenderTransform>
        </Ellipse>
        <Label Content="Rotated text." HorizontalAlignment="Left" Margin="133,267,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" FontWeight="Bold" FontSize="16">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="19.305"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label Content="Use WPF to build custom New Tab Page." HorizontalAlignment="Left" Margin="30,350,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="30,400,0,0" TextWrapping="Wrap" Text="CSharp Browser enables developers to use WPF to build your own custom New Tab Page with enterprise-specific content." VerticalAlignment="Top" Width="235"/>
        <Button Content="Get Started" HorizontalAlignment="Left" Margin="30,488,0,0" VerticalAlignment="Top" Width="97" Height="34" Click="Button_Click" Background="#FF8BEAFF"/>
    </Grid>
</UserControl>
